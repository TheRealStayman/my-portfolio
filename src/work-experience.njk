---
title: "Work Experience"
layout: "sidebar-layout.njk"
eleventyNavigation:
  key: Work Experience
  parent: Home
  order: 2
---

<div class="main-content-area">
    <header class="page-title-header">
        <h1>{{ title }}</h1>
    </header>
    <main>
        <div class="timeline-wrapper">
            <div class="timeline-container">
                {% for job in work_experience %}
                <div class="timeline-item">
                    <div class="timeline-date">{{ job.Date }}</div>
                    <div class="timeline-item-content">
                        <div class="timeline-header">
                            {% if job['Timeline Image'] %}
                            <img src="{{ job['Timeline Image'].src }}"
                                 alt="{{ job['Timeline Image'].alt }}"
                                 class="timeline-header-image">
                            {% else %}
                            <img src="/img/placeholder-image.png"
                                 alt="{{ job.Title }}"
                                 class="timeline-header-image">
                            {% endif %}
                            <div class="timeline-header-content">
                                <h2>{{ job.Title }}</h2>
                                <div class="subtitle">{{ job.Subtitle }}</div>
                                <div class="location">üìç {{ job.Location }}</div>
                            </div>
                        </div>
                        <div class="timeline-body">
                            <div class="timeline-description">
                                <p>{{ job['Description Long'] }}</p>
                            </div>
                            {% if job.Images and job.Images.length > 0 %}
                            <div class="timeline-gallery">
                                {% for image in job.Images %}
                                <img src="{{ image.src }}"
                                     alt="{{ image.alt }}"
                                     class="gallery-image">
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </main>
</div>

<!-- Add the gallery lightbox functionality -->
<link rel="stylesheet" href="/css/gallery-lightbox.css">
<script src="/js/gallery-lightbox.js"></script>
