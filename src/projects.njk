---
title: "Projects"
layout: "sidebar-layout.njk"
eleventyNavigation:
  key: Projects
  parent: Home
  order: 3
---

<div class="main-content-area">
    <header class="page-title-header">
        <h1>{{ title }}</h1>
    </header>
    <main>
        <div class="card-grid-wrapper">
            <div class="card-grid">
                {% for project in projects %}
                <div class="card-link-wrapper">
                    <article class="card">
                        {% if project['Header Image'] %}
                        <img src="{{ project['Header Image'].src }}"
                             alt="{{ project['Header Image'].alt }}"
                             class="card-image">
                        {% else %}
                        <img src="/img/placeholder-image.png"
                             alt="{{ project.Title }}"
                             class="card-image">
                        {% endif %}
                        <div class="card-content">
                            <h3>{{ project.Title }}</h3>
                            <p>{{ project['Description Brief'] }}</p>
                            <div class="card-footer">
                                <span class="date">{{ project.Date }}</span>
                                {% if project.Buttons and project.Buttons[0].text == "GitHub" %}
                                <a href="{{ project.Buttons[0].url }}"
                                   class="github-link"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   onclick="event.stopPropagation();">View on GitHub</a>
                                {% endif %}
                            </div>
                        </div>
                        <a href="{{ project['Card Link'] }}"
                           class="stretched-card-link"
                           aria-label="View project: {{ project.Title }}"></a>
                    </article>
                </div>
                {% endfor %}
            </div>
        </div>
    </main>
</div>
