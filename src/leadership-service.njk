---
title: "Leadership and Service"
layout: "sidebar-layout.njk"
eleventyNavigation:
  key: Leadership & Service
  parent: Home
  order: 4
---

<div class="main-content-area">
    <header class="page-title-header">
        <h1>{{ title }}</h1>
    </header>
    <main>
        <div class="timeline-wrapper">
            <div class="timeline-container">
                {% for item in leadership_and_service %}
                <div class="timeline-item">
                    <div class="timeline-date">{{ item.Date }}</div>
                    <div class="timeline-item-content">
                        <div class="timeline-header">
                            {% if item['Header Image'] %}
                            <img src="{{ item['Header Image'].src }}"
                                 alt="{{ item['Header Image'].alt }}"
                                 class="timeline-header-image">
                            {% else %}
                            <img src="/img/placeholder-image.png"
                                 alt="{{ item.Title }}"
                                 class="timeline-header-image">
                            {% endif %}
                            <div class="timeline-header-content">
                                <h2>{{ item.Title }}</h2>
                                <div class="subtitle">{{ item.Subtitle }}</div>
                                <div class="location">üìç {{ item.Location }}</div>
                            </div>
                        </div>
                        <div class="timeline-body">
                            <div class="timeline-description">
                                <p>{{ item['Description Long'] }}</p>
                            </div>
                            {% if item.Images and item.Images.length > 0 %}
                            <div class="timeline-gallery">
                                {% if item['Header Image'] %}
                                <img src="{{ item['Header Image'].src }}"
                                     alt="{{ item['Header Image'].alt }}"
                                     class="gallery-image">
                                {% endif %}
                                {% for image in item.Images %}
                                <img src="{{ image.src }}"
                                     alt="{{ image.alt }}"
                                     class="gallery-image">
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </main>
</div>

<!-- Add the gallery lightbox functionality -->
<link rel="stylesheet" href="/css/gallery-lightbox.css">
<script src="/js/gallery-lightbox.js"></script>
